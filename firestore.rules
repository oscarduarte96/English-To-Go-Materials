rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public Catalog Access
    match /products/{productId} {
      allow read: if true;
      // Allow create if user is auth and sets creator_uid to their own uid
      allow create: if request.auth != null && request.resource.data.creador_uid == request.auth.uid;
      // Allow update/delete if user is auth and is the creator of the existing doc
      allow update, delete: if request.auth != null && resource.data.creador_uid == request.auth.uid;
    }
    match /creators/{creatorId} {
      allow read: if true;
      allow write: if false; // Admin only
    }

    // Coupons - Public Read for Validation (No Listing)
    match /coupons/{couponId} {
      allow get: if true;
      allow list: if false; // Prevents generic fetching of all coupons
      allow write: if false; // Admin only
    }

    // User Private Data
    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || (resource.data.roles.teacher == true);
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Orders - Secure Creation & Read
    match /orders/{orderId} {
      // SOLO permitir creaci√≥n si el estado inicial es 'pending' (Evita compras falsas)
      allow create: if request.auth != null && request.resource.data.status == 'pending'; 
      // Optimized Rule: Buyer OR Author (via author_ids array)
      allow read: if request.auth != null && (
        resource.data.user_id == request.auth.uid || 
        (resource.data.keys().hasAny(['author_ids']) && request.auth.uid in resource.data.author_ids)
      );
      // BLOQUEAR actualizaciones manuales desde el cliente (solo las Cloud Functions deben completarlas)
      allow update: if false; 
    }

    // Validation Requests
    match /solicitudes_validacion/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
