rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Default: Public Read (for images), No Write
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // User Avatars: Owner can write
    match /avatars/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
